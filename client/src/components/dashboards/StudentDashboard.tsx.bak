import React, { useState } from 'react';
import { useQuery } from 'react-query';
import axios from 'axios';
import { academicSessions } from '../../utils/academicSessions';
import ComplaintForm from '../ComplaintForm';
import { 
  AcademicCapIcon, 
  CalendarDaysIcon, 
  ChartBarIcon,
  DocumentArrowDownIcon,
  CurrencyDollarIcon,
  ChatBubbleLeftRightIcon
} from '@heroicons/react/24/outline';

interface StudentStats {
  attendancePercentage: number;
  totalClasses: number;
  presentDays: number;
  recentGrades: any[];
}

const StudentDashboard: React.FC = () => {
  const [selectedSession, setSelectedSession] = useState('2024/2025');
  const [selectedTerm, setSelectedTerm] = useState('first');
  const [showComplaintForm, setShowComplaintForm] = useState(false);
  const [complaintRecipient, setComplaintRecipient] = useState<'admin' | 'exam_officer'>('admin');

  const { data: stats, isLoading } = useQuery<StudentStats>(
    'student-dashboard-stats',
    () => axios.get('/api/dashboard/stats').then(res => res.data)
  );

  const { data: studentData } = useQuery(
    'student-dashboard-data',
    () => axios.get('/api/dashboard/student/current').then(res => res.data)
  );

  const { data: results } = useQuery(
    ['student-results', selectedSession, selectedTerm],
    () => axios.get(`/api/results/student/current?academicYear=${selectedSession}&term=${selectedTerm}`).then(res => res.data)
  );

  const { data: paymentStatus } = useQuery(
    ['student-payments', selectedSession, selectedTerm],
    () => axios.get(`/api/payments/student/current?academicYear=${selectedSession}&term=${selectedTerm}`).then(res => res.data)
  );

  const downloadReceipt = async () => {
    try {
      const confirmedPayment = paymentStatus?.find((p: any) => p.status === 'paid');
      if (confirmedPayment) {
        const response = await axios.get(`/api/payments/${confirmedPayment._id}/receipt`);
        // Generate and download receipt PDF
        console.log('Receipt data:', response.data);
        // This would typically trigger a PDF download
      } else {
        alert('No confirmed payment found for this term');
      }
    } catch (error) {
      console.error('Error downloading receipt:', error);
    }
  };

  const downloadTranscript = async () => {
    try {
      const result = results?.find((r: any) => r.academicYear === selectedSession && r.term === selectedTerm);
      if (result) {
        const response = await axios.get(`/api/results/${result._id}/transcript`);
        // Generate and download transcript PDF
        console.log('Transcript data:', response.data);
        // This would typically trigger a PDF download
      } else {
        alert('No results found for this term');
      }
    } catch (error) {
      console.error('Error downloading transcript:', error);
    }
  };

  if (isLoading) {
    return (
      <div className="flex items-center justify-center h-64">
        <div className="animate-spin rounded-full h-32 w-32 border-b-2 border-primary-600"></div>
      </div>
    );
  }

  return (
    <div className="space-y-6">
      {/* Header */}
      <div className="bg-gradient-to-r from-green-600 to-blue-600 text-white p-6 rounded-lg">
        <h1 className="text-2xl font-bold">Student Dashboard</h1>
        <p className="text-green-100">Track your academic progress and performance.</p>
      </div>

      {/* Student Info Card */}
      <div className="bg-white p-6 rounded-lg shadow">
        <div className="flex items-center space-x-4">
          <div className="flex-shrink-0">
            <div className="h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center text-white text-xl font-bold">
              {studentData?.student?.user?.firstName?.charAt(0)}{studentData?.student?.user?.lastName?.charAt(0)}
            </div>
          </div>
          <div className="flex-1">
            <h2 className="text-xl font-bold text-gray-900">
              {studentData?.student?.user?.firstName} {studentData?.student?.user?.lastName}
            </h2>
            <p className="text-gray-600">Admission No: {studentData?.student?.admissionNumber}</p>
            <p className="text-gray-600">Class: {studentData?.student?.class?.name}</p>
            {studentData?.student?.house && (
              <p className="text-gray-600">House: <span className="capitalize font-medium">{studentData.student.house}</span></p>
            )}
          </div>
        </div>
      </div>

      {/* Session and Term Selector */}
      <div className="bg-white p-4 rounded-lg shadow">
        <div className="flex flex-wrap gap-4 items-center">
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">Academic Session</label>
            <select
              value={selectedSession}
              onChange={(e) => setSelectedSession(e.target.value)}
              className="border border-gray-300 rounded-md px-3 py-2"
            >
              {academicSessions.map(year => (
                <option key={year} value={year}>{year}</option>
              ))}
            </select>
          </div>
          <div>
            <label className="block text-sm font-medium text-gray-700 mb-1">Term</label>
            <select
              value={selectedTerm}
              onChange={(e) => setSelectedTerm(e.target.value)}
              className="border border-gray-300 rounded-md px-3 py-2"
            >
              <option value="first">First Term</option>
              <option value="second">Second Term</option>
              <option value="third">Third Term</option>
            </select>
          </div>
        </div>
      </div>

      {/* Stats Cards */}
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div className="bg-white p-6 rounded-lg shadow">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-600">Attendance</p>
              <p className="text-2xl font-bold text-gray-900">{studentData?.attendance?.percentage || 0}%</p>
              <p className="text-sm text-gray-500">{studentData?.attendance?.present} of {studentData?.attendance?.totalDays} days</p>
            </div>
            <div className="p-3 rounded-full bg-green-500">
              <CalendarDaysIcon className="h-6 w-6 text-white" />
            </div>
          </div>
        </div>

        <div className="bg-white p-6 rounded-lg shadow">
          <div className="flex items-center justify-between">
            <div>
              <p className="text-sm font-medium text-gray-600">Results Available</p>
              <p className="text-2xl font-bold text-gray-900">{studentData?.recentResults?.length || 0}</p>
              <p className="text-sm text-gray-500">Published results</p>
            </div>
            <div className="p-3 rounded-full bg-blue-500">
              <AcademicCapIcon className="h-6 w-6 text-white" />
            </div>
          </div>
        </div>

        <div className="bg-white p-6 rounded-lg shadow">
          <button
            onClick={downloadReceipt}
            className="w-full flex items-center justify-between hover:bg-gray-50 rounded-lg transition-colors"
          >
            <div className="text-left">
              <p className="text-sm font-medium text-gray-600">Payment Receipt</p>
              <p className="text-sm text-gray-500">Download receipt</p>
            </div>
            <div className="p-3 rounded-full bg-yellow-500">
              <CurrencyDollarIcon className="h-6 w-6 text-white" />
            </div>
          </button>
        </div>

        <div className="bg-white p-6 rounded-lg shadow">
          <button
            onClick={downloadTranscript}
            className="w-full flex items-center justify-between hover:bg-gray-50 rounded-lg transition-colors"
          >
            <div className="text-left">
              <p className="text-sm font-medium text-gray-600">Transcript</p>
              <p className="text-sm text-gray-500">Download transcript</p>
            </div>
            <div className="p-3 rounded-full bg-purple-500">
              <DocumentArrowDownIcon className="h-6 w-6 text-white" />
            </div>
          </button>
        </div>
      </div>

      {/* Comment Actions */}
      <div className="bg-white p-6 rounded-lg shadow">
        <h3 className="text-lg font-semibold mb-4">Send Comments</h3>
        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <button
            onClick={() => {
              setComplaintRecipient('admin');
              setShowComplaintForm(true);
            }}
            className="p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-colors flex items-center justify-center gap-3"
          >
            <ChatBubbleLeftRightIcon className="h-6 w-6 text-blue-600" />
            <span className="font-medium">Send Comment to Admin</span>
          </button>
          <button
            onClick={() => {
              setComplaintRecipient('exam_officer');
              setShowComplaintForm(true);
            }}
            className="p-4 border-2 border-dashed border-gray-300 rounded-lg hover:border-green-500 hover:bg-green-50 transition-colors flex items-center justify-center gap-3"
          >
            <ChatBubbleLeftRightIcon className="h-6 w-6 text-green-600" />
            <span className="font-medium">Send Comment to Exam Officer</span>
          </button>
        </div>
      </div>

      {/* Results Table */}
      <div className="card">
        <h3 className="text-lg font-semibold mb-4">Academic Results - {selectedSession} ({selectedTerm} Term)</h3>
        {results && results.length > 0 ? (
          <div className="overflow-x-auto">
            <table className="min-w-full divide-y divide-gray-200">
              <thead className="bg-gray-50">
                <tr>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Exam Type</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Grade</th>
                  <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Percentage</th>
                </tr>
              </thead>
              <tbody className="bg-white divide-y divide-gray-200">
                {results.map((result: any) => (
                  <tr key={result._id}>
                    <td className="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      {result.subject?.name}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                      {result.examType}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {result.obtainedMarks}/{result.maxMarks}
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap">
                      <span className={`inline-flex px-2 py-1 text-xs font-semibold rounded-full ${
                        result.grade === 'A+' || result.grade === 'A' ? 'bg-green-100 text-green-800' :
                        result.grade === 'B+' || result.grade === 'B' ? 'bg-blue-100 text-blue-800' :
                        result.grade === 'C' ? 'bg-yellow-100 text-yellow-800' :
                        'bg-red-100 text-red-800'
                      }`}>
                        {result.grade}
                      </span>
                    </td>
                    <td className="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                      {result.percentage.toFixed(1)}%
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        ) : (
          <div className="text-center py-8">
            <ChartBarIcon className="h-12 w-12 text-gray-400 mx-auto mb-4" />
            <p className="text-gray-500">No results available for the selected session and term.</p>
          </div>
        )}
      </div>

      {/* Recent Grades Summary */}
      {stats?.recentGrades && stats.recentGrades.length > 0 && (
        <div className="card">
          <h3 className="text-lg font-semibold mb-4">Recent Grades</h3>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {stats.recentGrades.slice(0, 6).map((grade: any) => (
              <div key={grade._id} className="p-4 border rounded-lg">
                <h4 className="font-medium text-gray-900">{grade.subject?.name}</h4>
                <p className="text-sm text-gray-600">{grade.examName}</p>
                <div className="mt-2 flex justify-between items-center">
                  <span className="text-lg font-bold">{grade.grade}</span>
                  <span className="text-sm text-gray-500">{grade.percentage.toFixed(1)}%</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      {/* Complaint Form Modal */}
      {showComplaintForm && (
        <ComplaintForm
          isOpen={showComplaintForm}
          onClose={() => setShowComplaintForm(false)}
          recipientType={complaintRecipient}
        />
      )}
    </div>
  );
};

export default StudentDashboard;